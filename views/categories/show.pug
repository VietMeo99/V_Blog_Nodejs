extends ../layout

block content
  // Page top section start
  div.page-top-area.set-bg(data-setbg='img/headers-bg/2.jpg')
    div.breadcrumb-area
      a(href='/') Vdev Web
      |  / 
      span All Categories
  // Page top section end
  h2.page-header #{category.name}
  .btn-row
    a.btn.btn-primary(href='/categories/' +category.id + '/edit') Edit
    a.btn.btn-danger(action='/categories/' + category.id+ '?_method=DELETE', method='POST') Delete
  if postsByCategory.length > 0
    h2.page-header Post in Category
    each post in postsByCategory
      img(height='150', width='100', src='' + post.coverImagePath)
