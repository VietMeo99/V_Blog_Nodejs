doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title VDEV - Login
    // Custom fonts for this template
    link(href='vendor2/fontawesome-free/css/all.min.css', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i', rel='stylesheet')
    // Custom styles for this template
    link(href='/css2/sb-admin-2.min.css', rel='stylesheet')
    style.
      body{
        background-color: aqua;
      }
  body
    .container
      // Outer Row
      .row.justify-content-center
        .col-xl-10.col-lg-12.col-md-9
          .card.o-hidden.border-0.shadow-lg.my-5
            .card-body.p-0
              // Nested Row within Card Body
              .row
                .col-lg-6.d-none.d-lg-block.bg-login-image
                .col-lg-6
                  .p-5
                    .text-center
                      h1.h4.text-gray-900.mb-4 Welcome Guy!
                    form.user(action='/users/login', method='post')
                      .form-group
                        label Username
                        input#exampleInputEmail.form-control.form-control-user(type='text', name='username',  placeholder='Enter UserName...')
                      .form-group
                        label Password
                        input#exampleInputPassword.form-control.form-control-user(type='password', name='password', placeholder='Password')
                      .form-group
                        input.btn.btn-primary.btn-user.btn-block(type='submit', value='Login')
                        hr.my-4
                        button.btn.btn-danger.btn-user.btn-block(type='submit')
                          i.fab.fa-google.mr-2
                          |  Sign in with Google
                        button.btn.btn-primary.btn-user.btn-block(type='submit')
                          i.fab.fa-facebook-f.mr-2
                          |  Sign in with Facebook
                    hr
                    .text-center
                      a.small(href='/') Home

    // Bootstrap core JavaScript
    script(src='jquery2/jquery.min.js')
    script(src='js2/bootstrap.bundle.min.js')
    // Core plugin JavaScript
    script(src='jquery-easing2/jquery.easing.min.js')
    // Custom scripts for all pages
    script(src='js2/sb-admin-2.min.js')
